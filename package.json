{
  "name": "headless-document-management-system",
  "version": "1.0.0",
  "description": "A comprehensive backend training project for document management with clean architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "db:generate": "npx drizzle-kit generate:pg",
    "db:migrate": "npx drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "bun test tests/",
    "test:watch": "bun test tests/ --watch",
    "test:coverage": "bun test tests/ --coverage",
    "test:auth": "bun test tests/auth.test.ts",
    "test:documents": "bun test tests/documents.test.ts",
    "test:storage": "bun test tests/storage.test.ts",
    "test:repositories": "bun test tests/repositories.test.ts",
    "test:api": "bun test tests/api.test.ts",
    "test:api-real": "bun test tests/api-real-tests.ts",
    "test:all": "bun run tests/run-all-tests.ts",
    "test:unit": "bun test tests/auth.test.ts tests/storage.test.ts tests/repositories.test.ts",
    "test:integration": "bun test tests/documents.test.ts tests/api.test.ts tests/api-real-tests.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "document-management",
    "typescript",
    "elysia",
    "drizzle",
    "clean-architecture"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/static": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "elysia": "^1.4.5",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "drizzle-kit": "^0.20.4",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
